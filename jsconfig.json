{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@utils-kit": ["utils"],
      "@utils/*": ["utils/*"],
      "@app/*": ["app/*"],
      "@game/*": ["app/game/*"]
    }
  },
  "include": ["src/**/*", "tools", "webpack.config.js"]
}
